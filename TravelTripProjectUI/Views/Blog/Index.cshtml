<body>
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                @foreach (var item in Model.Blog)
                {
                    <div class="single-grid">
                        <img src="@item.BlogImage" alt="" style="margin-bottom:20px;" />
                        <h3 class="text-center"><a href="/Blog/BlogDetail/@item.ID">@item.Heading</a></h3>
                        <p>
                            @item.Description
                        </p>
                    </div><br /><br />
                }
            </div>

            @Html.Action("BlogMenu", "Blog")
            <div class="clearfix"></div>
        </div>
    </div>
</body>

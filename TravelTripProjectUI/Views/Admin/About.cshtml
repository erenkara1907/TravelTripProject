@using TravelTripProjectUI.Models.Classes
@model List<About>

@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda Sayfası</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th style="display:none;" class="text-center">#</th>
        <th class="text-center">Fotoğraf</th>
        <th class="text-center">Açıklama</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center" style="width:100px; display:none;">@item.ID</td>
            <td class="text-center center-block"><img src="@item.PhotoUrl" width="1200px;" height="700px;" /></td>
            <td class="text-center" style="width:300px;">@item.Description</td>
            <td><a href="/Admin/EditAbout/@item.ID" class="btn btn-warning center-block" style="padding: 20px; font-size: 16px; font-weight: bold;">Güncelle</a></td>
        </tr>
    }
</table>



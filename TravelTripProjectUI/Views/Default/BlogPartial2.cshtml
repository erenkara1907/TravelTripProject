@using TravelTripProjectUI.Models.Classes
@model List<Blog>

@foreach (var item in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" style="width:300px; height:150px;" />
        </div>
        <div class="left-text">

            <h4>@item.Heading</h4>
            <span class="doller">@item.Date.ToString("dd.MM.yyyy")</span>
            <p>@item.Description.Substring(0, 80)...</p>
            <p><a href="/Blog/BlogDetail/@item.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>
}